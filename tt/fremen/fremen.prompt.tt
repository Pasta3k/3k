    #delay 0 #showme {HP: 470/470 SP: 189/189 W: 270/299(0) L: 91% P: 0/42% G: 0 LIT: Luc T: none}
#nop    #delay 10 #showme {HP: 204/204 SP: 112/112 W: 68/68(4) L: 80% P:0/51% T: none G: 0 LT: Lum};
